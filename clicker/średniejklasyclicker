    <img id="rotating-image" src="https://www.mbludzm.pl/_galeria/teksty/sw-jan-pawel-ii-a6c-656.jpg" alt="Obrazek">
    <script>
        const image = document.getElementById('rotating-image');
        let rotation = 0;

        image.addEventListener('click', () => {
            rotation += 1;
            image.style.transform = rotate(${rotation}deg);
        });
    </script>
